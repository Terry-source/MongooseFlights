<%- include('../partials/header') %>

<h2>Enter a New Movie</h2>

<form action="/flights" method="post">
  <label
    >Airline:
    <input type="text" name="airline" />
  </label>
  <br />
  <label
    >Airport:
    <input type="text" name="airport" value="DEN" />
  </label>
  <br />
  <label
    >Flight Number:
    <input type="number" name="flightNo" min="10" max="9999" />
  </label>
  <br />
  <label
    >Departure Date:
    <input type="date" name="departs" />
  </label>
  <br />
</form>

