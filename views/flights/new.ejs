<%- include('../partials/header') %>

  <h2>Enter a New Movie</h2>

  <form id="new-form" action="/flights" method="post">
    <label>Airline:
      <select name="airline" />
      <!-- ["American", "Southwest", "United"], -->
      <option value="American">American Airlines</option>
      <option value="Southwest">Southwest Airlines</option>
      <option value="United">United Airlines</option>
      </select>
    </label>
    <br />
    <label>Airport:
      <select name="airport" value="DEN" />
      <option value="DEN">Denver</option>
      <option value="LAX">Los Angeles</option>
      <option value="AUS">Austin</option>
      <option value="SEA">Seattle</option>
      <option value="SAN">San Francisco</option>
      </select>
    </label>
    <br />
    <label>Flight Number:
      <input type="number" name="flightNo" min="10" max="9999" value="8008" />
    </label>
    <br />
    <label>Departure Date:
      <input type="datetime-local" name="departs"/>
    </label>
    <br />
    <label>Destination:
      <select name="destinations" value="LAX" />
      <option value="DEN">Denver</option>
      <option value="LAX">Los Angeles</option>
      <option value="AUS">Austin</option>
      <option value="SEA">Seattle</option>
      <option value="SAN">San Francisco</option>
      </select>
    </label>
    <input type="submit" value="Add Flight" />
  </form>

  <p>
    <%= errorMsg %>
  </p>

  <%- include('../partials/footer') %> ```