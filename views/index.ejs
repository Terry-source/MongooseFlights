<%- include('./partials/header') %>

  <table>
    <thead>
      <tr>
        <th>Flight Number</th>
        <th>Airline</th>
        <th>Airport</th>
        <th>Departs</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(function(f) { %>
        <% const isPastFlight=new Date(f.departs) < new Date(); %>
          <tr class="<%= isPastFlight ? 'past-flight' : '' %>">
            <td>
              <%= f.flightNo %>
            </td>
            <td>
              <%= f.airline %>
            </td>
            <td>
              <%= f.airport %>
            </td>
            <td>
              <%= f.departs %>
            </td>
            <td><a href="/flights/<%= f._id %>">Details</a></td>
          </tr>
          <% }); %>
    </tbody>
  </table>

  <%- include('./partials/footer') %>