<%- include('./partials/header') %>

<table>
  <thead>
    <tr>
      <th>Flight Number</th>
      <th>Airline</th>
      <th>Airport</th>
      <th>Departs</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(f) { %>
    <tr>
      <td><%= f.flightNo %></td>
      <td><%= f.airline %></td>
      <td><%= f.airport %></td>
      <td><%= f.departs %></td>
      <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
    </tr>
    <% }); %>
  </tbody>
</table>

<%- include('./partials/footer') %>
